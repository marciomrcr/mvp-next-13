model Income {
  id          String   @id @default(cuid())
  title       String   @unique
  description String?
  status      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([title])
  @@map("receitas")
}

model Expense {
  id          String   @id @default(cuid())
  title       String   @unique
  description String?
  status      Status   @default(Ativo)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([title])
  @@map("despesas")
}
